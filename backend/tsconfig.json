{
	"compilerOptions": {
		"module": "es2022",
		"moduleResolution": "bundler",
		"target": "es2022",
		"outDir": "./dist",
		"strict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"useDefineForClassFields": false
	},
	"include": ["src/**/*", "prisma/seed.ts"]
}

